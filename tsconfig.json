{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node", // 使用 Node.js 风格的模块解析
    "esModuleInterop": true, // 支持 ES6 模块导入方式
    "skipLibCheck": true // 避免库文件检查
  }
}
